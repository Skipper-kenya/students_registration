@model student_registration.Models.Student
@{
}


<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="RegNo">Registration Number</label>
        <input type="text" asp-for="Registration" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IdNo">ID No.</label>
        <input type="number" asp-for="IdNo" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Phone">Phone Number</label>
        <input type="number" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label for="School">School</label>
        <input type="text" asp-for="School" class="form-control" />
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Edit Student</button>
    </div>
</form>